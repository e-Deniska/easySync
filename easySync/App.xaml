<Application x:Class="easySync.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:easySync.CustomControls"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="cc:ImageButton">
            <Setter Property="Margin" Value="1" />
            <Setter Property="Padding" Value="6,3,6,3" />            
        </Style>

        <Style x:Key="AboutTextBlockStyle">
            <Setter Property="TextBlock.Margin" Value="3,3,3,0" />
        </Style>

        <Style x:Key="AboutLinkStyle">
            <Setter Property="TextBlock.Margin" Value="3,0,3,3" />
            <Setter Property="TextBlock.Foreground" Value="Blue" />
        </Style>

        <Style x:Key="TextBlockDefaultStyle">
            <Setter Property="TextBlock.Margin" Value="3,0,3,0" />
        </Style>
        <Style x:Key="ListBoxItemTitleStyle" BasedOn="{StaticResource ResourceKey=TextBlockDefaultStyle}">
            <Setter Property="TextBlock.TextAlignment" Value="Right" />
        </Style>
        <Style x:Key="ListBoxItemValueStyle" BasedOn="{StaticResource ResourceKey=TextBlockDefaultStyle}">
            <Setter Property="TextBlock.FontWeight" Value="DemiBold" />
        </Style>
    </Application.Resources>
</Application>
